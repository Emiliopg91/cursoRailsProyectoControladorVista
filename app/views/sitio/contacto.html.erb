<h1 class="text-center">Contacta con nosotros</h1>
<div class="row">
    <% if flash[:succ] %>
       <div class="col-xs-12 col-md-4 col-md-offset-4 text-center" style="color: green">
        <%= flash[:succ] %>
      </div>
      <br/>
    <% end %>
    <% if flash[:fail] %>
       <div class="col-xs-12 col-md-4 col-md-offset-4 text-center" style="color: red">
        <%= flash[:fail] %>
      </div>
      <br/>
    <% end %>
</div>
    
<%= form_tag "", :id=>'formulario', :class=>'form row' %>
  <div class="col-xs-12 col-md-3 col-md-offset-3 form-group">
      <%= ponLabel :para=>"nombre", :texto=>"Nombre", :clase=>"control-label" %>
      <%= ponCampoTexto :id=>"nombre", :clase=>"form-control", :holder=>"Tu nombre" %>
  </div>
  <div class="col-xs-12 col-md-3 form-group">
      <%= ponLabel :para=>"correo", :texto=>"Email", :clase=>"control-label" %>
      <%= ponCampoEmail :id=>"correo", :clase=>"form-control", :holder=>"Tu correo" %>
  </div>
  <div class="col-xs-12 col-md-6 col-md-offset-3 form-group">
      <%= ponLabel :para=>"asunto", :clase=>"control-label" %>
      <%= ponCampoTexto :id=>"asunto", :clase=>"form-control", :holder=>"Un resumen" %>
  </div>
  <div class="col-xs-12 col-md-6 col-md-offset-3 form-group">
      <%= ponLabel :para=>"mensaje", :clase=>"control-label" %>
      <%= ponCampoTextarea :id=>"mensaje", :filas=>"10", :holder=>"Cuentame", :clase=>"form-control" %>
  </div>
  <div class="col-xs-12 col-md-6 col-md-offset-3  form-group">
    <input type="submit" value="Enviar" class="btn btn-primary" onclick="return validaContacto();"/>
  </div>
<%= cierraForm %>